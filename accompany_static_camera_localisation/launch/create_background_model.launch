<launch>

  <!-- create background list -->
  <node pkg="accompany_static_camera_localisation" type="create_background_list" name="create_background_list" args="$(find accompany_static_camera_localisation)/res/background_images/background_list.txt $(find accompany_static_camera_localisation)/res/background_images/background_list.txt/*.jpg" />

  <!-- create background model -->
  <node pkg="accompany_static_camera_localisation" type="build_background_model" name="build_background_model" args="-i $(find accompany_static_camera_localisation)/res/background_images/background_list.txt -o $(find accompany_static_camera_localisation)/res/bgmodel.xml" />

</launch>
